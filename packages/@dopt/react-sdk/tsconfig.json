{
  "extends": "@dopt/tsconfig/base.json",
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] }
  },
  "exclude": ["**/node_modules", "**/dist", "**/tsup.config.ts", "usecases/**"],
  "include": ["**/*.ts", "**/*.tsx"]
}
